<%- include('includes/head'); %>

<%- include('includes/nav'); %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
          <h1 class="text-center">Contatos</h1>
          
          <p class="text-center lead">Aqui você pode encontrar seus contatos salvos</p>

          <%- include('includes/messages'); %>
          <% if(contatos.length > 0) { %>
            <div class="responsive-table my-2">
              <table class="table">
                <% contatos.forEach((contato) => { %>
                  <tr>
                    <td><%= contato.nome %></td>
                    <td><%= contato.sobrenome %></td>
                    <td><%= contato.email %></td>
                    <td><%= contato.telefone %></td>
                    <td><a href="/contatos/<%= contato._id %>">Editar</a></td>
                    <td><a class="text-danger" href="/contatos/deletar/<%= contato._id %>">Deletar</a></td>
                <% }); %>
              </table>
            </div>
          <% } else { %>
            <p class="text-center lead text-warning">Você não possui contatos</p>
          <% } %>
        </div>
    </div>
  </div>

<%- include('includes/footer'); %>
