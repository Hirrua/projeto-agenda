<%- include('includes/head'); %>

<%- include('includes/nav'); %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
          <h1 class="text-center">Painel de contatos</h1>

          <%- include('includes/messages'); %>

          <% if(!contato._id) { %>
            <form action="/contatos/cadastrar" method="post">
          <% } else { %>
            <form action="/contatos/atualizar/<%= contato._id %>" method="post">
          <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    
            <div class="form-group">
              <label>Nome</label>
              <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
              <label>Sobrenome</label>
              <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
              <label>Email</label>
              <input value="<%= contato.email %>" type="email" class="form-control" name="email">
              <label>Telefone</label>
              <input value="<%= contato.telefone %>" type="text" class="form-control" name="telefone">
            </div>

            <% if(!contato._id) { %>
              <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
            <% } else { %>
              <button type="submit" class="btn btn-primary btn-block">Atualizar</button>
            <% } %>
            
    
          </form>
        </div>
    </div>
  </div>

<%- include('includes/footer'); %>
