<%- include('includes/head'); %>

<%- include('includes/nav'); %>

<div class="container my-5">

  <h1 class="text-center">Credenciais</h1>
  <%- include('includes/messages'); %>


  <div class="row justify-content-center alight-center my-5">

    <div class="col-lg-5 border-right">

      <h4 class="text-center">Login</h4>

      <form action="login/entrar" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="form-group">
          <label>Email</label>
          <input type="email" class="form-control" name="email" placeholder="Digite seu email">
        </div>

        <div class="form-group">
          <label>Senha</label>
          <input type="password" class="form-control" name="password" placeholder="Digite sua senha">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Entrar</button>

      </form>

    </div>

    <div class="col-lg-6">

      <h4 class="text-center">Cadastro</h4>

      <form action="login/registrar" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="form-group">
          <label>Email</label>
          <input type="email" class="form-control" name="email" placeholder="Digite seu email">

        <div class="form-group">
          <label>Senha</label>
          <input type="password" class="form-control" name="password" placeholder="Digite sua senha">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Criar</button>

      </form>

    </div>
  </div>
</div>

<%- include('includes/footer'); %>
